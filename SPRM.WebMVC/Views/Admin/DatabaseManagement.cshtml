@{
    ViewData["Title"] = "Quản lý Database";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-database"></i> Quản lý Database</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Quản trị</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Quản lý Database</li>
                    </ol>
                </nav>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Database Status Card -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5><i class="fas fa-info-circle"></i> Trạng thái Database</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <p><strong>Dữ liệu mẫu:</strong></p>
                                    @if (ViewBag.HasSampleData == true)
                                    {
                                        <span class="badge bg-warning fs-6">
                                            <i class="fas fa-exclamation-triangle"></i> Có dữ liệu mẫu
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check"></i> Đã xóa dữ liệu mẫu
                                        </span>
                                    }
                                </div>
                                <div class="col-md-4 text-end">
                                    <i class="fas fa-database fa-3x text-info"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h5><i class="fas fa-user-shield"></i> Admin User</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Username:</strong> admin</p>
                            <p><strong>Email:</strong> admin@sprm.edu</p>
                            <p><strong>Password:</strong> admin123</p>
                            <small class="text-muted">Admin user luôn được giữ lại sau khi xóa dữ liệu mẫu</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5><i class="fas fa-tools"></i> Thao tác Database</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.HasSampleData == true)
                    {
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle"></i> Cảnh báo</h6>
                            <p>Database hiện tại có chứa dữ liệu mẫu. Bạn có thể xóa dữ liệu mẫu để bắt đầu với database sạch.</p>
                            <p><strong>Dữ liệu sẽ bị xóa:</strong></p>
                            <ul>
                                <li>Tất cả người dùng (trừ admin)</li>
                                <li>Tất cả dự án mẫu</li>
                                <li>Tất cả chủ đề nghiên cứu mẫu</li>
                                <li>Các dữ liệu liên quan khác</li>
                            </ul>
                        </div>

                        <form asp-action="ClearDatabase" method="post" onsubmit="return confirmDelete()">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash-alt"></i> Xóa dữ liệu mẫu
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <h6><i class="fas fa-check-circle"></i> Database đã sạch</h6>
                            <p>Database hiện tại không có dữ liệu mẫu. Bạn có thể bắt đầu sử dụng hệ thống với dữ liệu thực.</p>
                        </div>

                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="fas fa-home"></i> Về trang chủ
                            </a>
                            <a href="@Url.Action("ManageUsers")" class="btn btn-secondary">
                                <i class="fas fa-users"></i> Quản lý người dùng
                            </a>
                        </div>
                    }
                </div>
                <div class="card-footer text-muted">
                    <small>
                        <i class="fas fa-info-circle"></i> 
                        Admin user (admin@sprm.edu) sẽ luôn được giữ lại để đảm bảo bạn có thể truy cập hệ thống.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete() {
    return confirm('Bạn có chắc chắn muốn xóa tất cả dữ liệu mẫu?\n\nHành động này không thể hoàn tác!\n\n✓ Admin user sẽ được giữ lại\n✗ Tất cả dữ liệu khác sẽ bị xóa');
}
</script>
