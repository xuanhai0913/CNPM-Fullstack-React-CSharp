@model SPRM.Business.DTOs.UserDto
@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Chi tiết người dùng
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tên đăng nhập:</label>
                                <p class="form-control-plaintext">@Model.Username</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Họ và tên:</label>
                                <p class="form-control-plaintext">@Model.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Vai trò:</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-@(Model.Role == "Administrator" ? "danger" : Model.Role == "Researcher" ? "success" : Model.Role == "Staff" ? "warning" : "info") fs-6">
                                        @Model.Role
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Số điện thoại:</label>
                            <p class="form-control-plaintext">@Model.PhoneNumber</p>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">ID người dùng:</label>
                        <p class="form-control-plaintext text-muted">@Model.Id</p>
                    </div>

                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("ManageUsers")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Quay lại
                        </a>
                        <div>
                            <a href="@Url.Action("UpdateUser", new { id = Model.Id })" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>
                                Chỉnh sửa
                            </a>
                            <button class="btn btn-danger" onclick="deleteUser('@Model.Id')">
                                <i class="fas fa-trash me-1"></i>
                                Xóa
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteUser(userId) {
            if (confirm('Bạn có chắc chắn muốn xóa người dùng này?')) {
                $.ajax({
                    url: '@Url.Action("RemoveUser")',
                    type: 'POST',
                    data: { id: userId },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            window.location.href = '@Url.Action("ManageUsers")';
                        } else {
                            alert('Lỗi: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi xóa người dùng');
                    }
                });
            }
        }
    </script>
}
