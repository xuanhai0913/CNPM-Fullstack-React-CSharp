@{
    ViewData["Title"] = "Import người dùng từ CSV";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-import me-2"></i>
                        Import người dùng từ CSV
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle me-2"></i>Hướng dẫn:</h5>
                        <ul class="mb-0">
                            <li>File CSV phải có định dạng: Username, FullName, Email, Role</li>
                            <li>Dòng đầu tiên sẽ được bỏ qua (header)</li>
                            <li>Vai trò hợp lệ: Administrator, Researcher, Staff, Student</li>
                            <li>Mật khẩu mặc định sẽ là: DefaultPassword123!</li>
                        </ul>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h6><i class="fas fa-table me-2"></i>Mẫu file CSV:</h6>
                        </div>
                        <div class="card-body">
                            <pre class="bg-light p-3 rounded">Username,FullName,Email,Role
john.doe,John Doe,john.doe@example.com,Researcher
jane.smith,Jane Smith,jane.smith@example.com,Staff
student1,Nguyen Van A,student1@university.edu,Student</pre>
                        </div>
                    </div>

                    <form asp-action="ImportUser" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label for="csvFile" class="form-label">Chọn file CSV:</label>
                            <input type="file" name="csvFile" id="csvFile" class="form-control" accept=".csv" required />
                            <div class="form-text">Chỉ chấp nhận file CSV (.csv)</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ManageUsers")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload me-1"></i>
                                Import CSV
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">
                    
                    <div class="text-center">
                        <button type="button" class="btn btn-outline-primary" onclick="downloadSampleCsv()">
                            <i class="fas fa-download me-2"></i>
                            Tải xuống file mẫu CSV
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function downloadSampleCsv() {
            const csvContent = "Username,FullName,Email,Role\n" +
                              "john.doe,John Doe,john.doe@example.com,Researcher\n" +
                              "jane.smith,Jane Smith,jane.smith@example.com,Staff\n" +
                              "student1,Nguyen Van A,student1@university.edu,Student";
            
            const element = document.createElement('a');
            element.setAttribute('href', 'data:text/csv;charset=utf-8,' + encodeURIComponent(csvContent));
            element.setAttribute('download', 'sample_users.csv');
            element.style.display = 'none';
            document.body.appendChild(element);
            element.click();
            document.body.removeChild(element);
        }

        // File validation
        document.getElementById('csvFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file && !file.name.toLowerCase().endsWith('.csv')) {
                alert('Vui lòng chọn file CSV!');
                e.target.value = '';
            }
        });
    </script>
}
