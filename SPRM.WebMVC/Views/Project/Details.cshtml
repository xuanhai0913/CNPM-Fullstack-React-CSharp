@model SPRM.Business.DTOs.ProjectDto
@{
    ViewData["Title"] = "Chi tiết dự án";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4" data-aos="fade-up">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Dự án</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h2 class="fw-bold mb-0">Chi tiết dự án</h2>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4" data-aos="fade-up" data-aos-delay="100">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center py-3">
                    <div class="d-flex align-items-center">
                        <div class="project-icon bg-soft-primary rounded-circle text-primary me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="fas fa-project-diagram fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold mb-0">@Model.Name</h4>
                            @{
                                string badgeClass = "bg-info";
                                if (Model.Status == "Đã hoàn thành") badgeClass = "bg-success";
                                else if (Model.Status == "Tạm dừng") badgeClass = "bg-warning";
                            }
                            <span class="badge @badgeClass rounded-pill">@Model.Status</span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="card border-0 bg-soft-success rounded-3 h-100">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-calendar-alt text-success me-2"></i>
                                        <h6 class="text-dark fw-bold mb-0">Ngày bắt đầu</h6>
                                    </div>
                                    <p class="fs-5 mb-0">@Model.StartDate.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 bg-soft-warning rounded-3 h-100">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-calendar-check text-warning me-2"></i>
                                        <h6 class="text-dark fw-bold mb-0">Ngày kết thúc</h6>
                                    </div>
                                    <p class="fs-5 mb-0">@(Model.EndDate?.ToString("dd/MM/yyyy") ?? "Chưa xác định")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold mb-3 d-flex align-items-center">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            Mô tả dự án
                        </h5>
                        <div class="card border-0 bg-light rounded-3">
                            <div class="card-body p-3">
                                <p class="mb-0">@(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả cho dự án này." : Model.Description)</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold mb-3 d-flex align-items-center">
                            <i class="fas fa-clipboard-list text-primary me-2"></i>
                            Công việc gần đây
                        </h5>
                        <div class="list-group">
                            <div class="list-group-item d-flex justify-content-between align-items-center bg-light text-muted">
                                <span>Không có công việc nào gần đây</span>
                                <a href="#" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-plus me-1"></i> Thêm
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">Đã tạo: @Model.StartDate.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div>
                            <a href="#" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash me-1"></i> Xóa dự án
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                </button>
            </div>
        </div>
        
        <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
            <!-- Thống kê dự án -->
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-transparent py-3">
                    <h5 class="fw-bold mb-0 d-flex align-items-center">
                        <i class="fas fa-chart-pie text-primary me-2"></i>
                        Thống kê dự án
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-0">
                        <div class="col-6 p-3 text-center border-end">
                            <div class="rounded-circle bg-soft-primary mx-auto d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                <h3 class="mb-0 text-primary fw-bold">0</h3>
                            </div>
                            <p class="text-muted mb-0">Công việc</p>
                        </div>
                        <div class="col-6 p-3 text-center">
                            <div class="rounded-circle bg-soft-success mx-auto d-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                                <h3 class="mb-0 text-success fw-bold">0%</h3>
                            </div>
                            <p class="text-muted mb-0">Hoàn thành</p>
                        </div>
                    </div>
                    
                    <hr class="my-3">
                    
                    <div class="mb-3">
                        <h6 class="fw-bold text-muted mb-2 small text-uppercase">Tiến độ dự án</h6>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    
                    <div class="d-grid">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-tasks me-2"></i> Quản lý công việc
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Thành viên dự án -->
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0 d-flex align-items-center">
                        <i class="fas fa-users text-primary me-2"></i>
                        Thành viên
                    </h5>
                    <button class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i> Thêm
                    </button>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item bg-light text-center py-4">
                            <div class="mb-3">
                                <i class="fas fa-user-friends fa-2x text-muted"></i>
                            </div>
                            <p class="mb-2 text-muted">Chưa có thành viên nào trong dự án này</p>
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-plus me-1"></i> Thêm thành viên
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Hoạt động gần đây -->
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-transparent py-3">
                    <h5 class="fw-bold mb-0 d-flex align-items-center">
                        <i class="fas fa-history text-primary me-2"></i>
                        Hoạt động gần đây
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="timeline p-3">
                        <div class="timeline-item pb-3">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="fw-bold mb-1 small">Dự án được tạo</h6>
                                <p class="text-muted mb-0 small">@Model.StartDate.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Thêm các hiệu ứng tương tác nếu cần
        });
    </script>
}
