@model SPRM.Business.DTOs.ProjectDto
@{
    ViewData["Title"] = "Chi tiết dự án";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3><i class="fas fa-project-diagram"></i> @Model.Name</h3>
                <span class="badge bg-primary fs-6">@Model.Status</span>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-muted">Ngày bắt đầu</h6>
                        <p class="fs-5"><i class="fas fa-calendar-alt text-success"></i> @Model.StartDate.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Ngày kết thúc</h6>
                        <p class="fs-5"><i class="fas fa-calendar-check text-warning"></i> @(Model.EndDate?.ToString("dd/MM/yyyy") ?? "Chưa xác định")</p>
                    </div>
                </div>

                <div class="mb-4">
                    <h6 class="text-muted">Mô tả dự án</h6>
                    <p class="fs-6">@(Model.Description ?? "Chưa có mô tả")</p>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Danh sách dự án
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-tasks"></i> Thống kê</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-primary">0</h4>
                            <small class="text-muted">Công việc</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success">0%</h4>
                        <small class="text-muted">Hoàn thành</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-users"></i> Thành viên</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Chưa có thành viên nào</p>
                <button class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-plus"></i> Thêm thành viên
                </button>
            </div>
        </div>
    </div>
</div>
