@model SPRM.Business.DTOs.ProjectDto
@{
    ViewData["Title"] = "Chỉnh sửa dự án";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4" data-aos="fade-up">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Dự án</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">Chi tiết</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
                </ol>
            </nav>
            <h2 class="fw-bold mb-0">Chỉnh sửa dự án</h2>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="fas fa-trash-alt me-2"></i> Xóa dự án
            </a>
        </div>
    </div>

    <div class="row" data-aos="fade-up" data-aos-delay="100">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-transparent py-3">
                    <h5 class="fw-bold mb-0 d-flex align-items-center">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Thông tin dự án
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 p-3" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label fw-semibold">Tên dự án <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Nhập tên dự án" autofocus />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="form-group">
                                    <label asp-for="Status" class="form-label fw-semibold">Trạng thái</label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="Planning">Lập kế hoạch</option>
                                        <option value="InProgress">Đang thực hiện</option>
                                        <option value="Completed">Hoàn thành</option>
                                        <option value="OnHold">Tạm dừng</option>
                                        <option value="Cancelled">Đã hủy</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Mô tả dự án</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết về dự án nghiên cứu của bạn..."></textarea>
                            <div class="form-text">
                                Mô tả ngắn gọn về dự án, bao gồm mục tiêu, phạm vi và tầm quan trọng của dự án.
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="form-label fw-semibold">Ngày bắt đầu <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-calendar-alt"></i></span>
                                        <input asp-for="StartDate" type="date" class="form-control" />
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="form-label fw-semibold">Ngày kết thúc dự kiến</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-calendar-check"></i></span>
                                        <input asp-for="EndDate" type="date" class="form-control" />
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Budget" class="form-label fw-semibold">Ngân sách (VNĐ)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-money-bill-wave"></i></span>
                                <input asp-for="Budget" type="number" class="form-control" placeholder="0" min="0" />
                            </div>
                            <span asp-validation-for="Budget" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-semibold d-block">Mức độ ưu tiên</label>
                            <div class="btn-group" role="group">
                                <input type="radio" class="btn-check" name="PriorityLevel" id="priorityLow" value="Low" autocomplete="off" 
                                       @(Model.PriorityLevel == "Low" ? "checked" : "")>
                                <label class="btn btn-outline-secondary" for="priorityLow">Thấp</label>
                                
                                <input type="radio" class="btn-check" name="PriorityLevel" id="priorityMedium" value="Medium" autocomplete="off" 
                                       @(Model.PriorityLevel == "Medium" || string.IsNullOrEmpty(Model.PriorityLevel) ? "checked" : "")>
                                <label class="btn btn-outline-secondary" for="priorityMedium">Trung bình</label>
                                
                                <input type="radio" class="btn-check" name="PriorityLevel" id="priorityHigh" value="High" autocomplete="off" 
                                       @(Model.PriorityLevel == "High" ? "checked" : "")>
                                <label class="btn btn-outline-secondary" for="priorityHigh">Cao</label>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <div class="form-group">
                                    <label class="form-label fw-semibold">Loại dự án</label>
                                    <select class="form-select" name="ProjectCategory" asp-for="ProjectCategory">
                                        <option value="Research">Nghiên cứu khoa học</option>
                                        <option value="Development">Phát triển sản phẩm</option>
                                        <option value="Thesis">Luận văn</option>
                                        <option value="Other">Khác</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label fw-semibold">Lĩnh vực</label>
                                    <select class="form-select" name="FieldOfStudy" asp-for="FieldOfStudy">
                                        <option value="IT">Công nghệ thông tin</option>
                                        <option value="Engineering">Kỹ thuật</option>
                                        <option value="Business">Kinh doanh</option>
                                        <option value="Science">Khoa học</option>
                                        <option value="Medicine">Y học</option>
                                        <option value="Education">Giáo dục</option>
                                        <option value="Other">Khác</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="row">
                            <div class="col-12 d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i> Hủy
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i> Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-transparent py-3">
                    <h5 class="fw-bold mb-0 d-flex align-items-center">
                        <i class="fas fa-history text-primary me-2"></i>
                        Lịch sử chỉnh sửa
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="timeline p-4">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h6 class="fw-bold mb-0">Cập nhật trạng thái</h6>
                                    <span class="badge bg-soft-primary text-primary">2 giờ trước</span>
                                </div>
                                <p class="text-muted mb-0 small">Trạng thái dự án đã được thay đổi từ "Lập kế hoạch" sang "Đang thực hiện"</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h6 class="fw-bold mb-0">Thêm thành viên</h6>
                                    <span class="badge bg-soft-info text-info">1 ngày trước</span>
                                </div>
                                <p class="text-muted mb-0 small">Nguyễn Văn A đã được thêm vào dự án với vai trò Nghiên cứu viên</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h6 class="fw-bold mb-0">Tạo dự án</h6>
                                    <span class="badge bg-soft-success text-success">5 ngày trước</span>
                                </div>
                                <p class="text-muted mb-0 small">Dự án đã được tạo bởi Trần Văn B</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-transparent py-3">
                    <h5 class="fw-bold mb-0 d-flex align-items-center">
                        <i class="fas fa-users text-primary me-2"></i>
                        Thành viên dự án
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar-sm bg-soft-primary rounded-circle me-3 d-flex align-items-center justify-content-center">
                                <span class="text-primary fw-bold">NT</span>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-0">Nguyễn Thành</h6>
                                <p class="text-muted mb-0 small">Trưởng nhóm</p>
                            </div>
                            <div class="ms-auto">
                                <span class="badge bg-success">Quản lý</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar-sm bg-soft-info rounded-circle me-3 d-flex align-items-center justify-content-center">
                                <span class="text-info fw-bold">TVB</span>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-0">Trần Văn B</h6>
                                <p class="text-muted mb-0 small">Nghiên cứu viên</p>
                            </div>
                            <div class="ms-auto">
                                <span class="badge bg-info">Thành viên</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-soft-success rounded-circle me-3 d-flex align-items-center justify-content-center">
                                <span class="text-success fw-bold">NVA</span>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-0">Nguyễn Văn A</h6>
                                <p class="text-muted mb-0 small">Phân tích dữ liệu</p>
                            </div>
                            <div class="ms-auto">
                                <span class="badge bg-info">Thành viên</span>
                            </div>
                        </div>
                    </div>

                    <button type="button" class="btn btn-outline-primary w-100">
                        <i class="fas fa-user-plus me-2"></i> Thêm thành viên
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Enable animation for form elements
            $('form .form-control, form .form-select').on('focus', function() {
                $(this).closest('.form-group').addClass('form-focus');
            }).on('blur', function() {
                $(this).closest('.form-group').removeClass('form-focus');
            });
            
            // Initialize date pickers with better UI
            $('input[type="date"]').on('click', function() {
                $(this).closest('.input-group').addClass('input-group-active');
            });
        });
    </script>
}
