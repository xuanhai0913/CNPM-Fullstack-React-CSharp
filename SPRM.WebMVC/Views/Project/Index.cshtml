@model IEnumerable<SPRM.Business.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Danh sách dự án";
}

<div class="d-flex justify-content-between align-items-center mb-4" data-aos="fade-up">
    <div>
        <h2 class="fw-bold mb-1">Danh sách dự án</h2>
        <p class="text-muted">Quản lý và theo dõi các dự án nghiên cứu của bạn</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> Tạo dự án mới
    </a>
</div>

<div class="card border-0 shadow-sm rounded-3" data-aos="fade-up" data-aos-delay="100">
    <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <i class="fas fa-project-diagram text-primary me-2 fa-lg"></i>
            <h5 class="mb-0 fw-bold">Dự án của bạn</h5>
        </div>
        <div class="d-flex gap-2">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Tìm kiếm dự án...">
                <button class="btn btn-outline-secondary" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-filter me-1"></i> Lọc
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="filterDropdown">
                    <li><a class="dropdown-item" href="#">Tất cả</a></li>
                    <li><a class="dropdown-item" href="#">Đang thực hiện</a></li>
                    <li><a class="dropdown-item" href="#">Đã hoàn thành</a></li>
                    <li><a class="dropdown-item" href="#">Tạm dừng</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Tên dự án</th>
                            <th>Loại & Lĩnh vực</th>
                            <th>Trạng thái</th>
                            <th>Ưu tiên</th>
                            <th>Thời gian</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="project-icon bg-soft-primary rounded-circle text-primary me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-folder"></i>
                                        </div>
                                        <div>
                                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                            <br><small class="text-muted text-truncate d-inline-block" style="max-width: 200px;">
                                                @(string.IsNullOrEmpty(item.Description) ? "Không có mô tả" : item.Description)
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <span class="badge bg-soft-info text-info mb-1 category-badge">
                                            <i class="fas fa-tag me-1"></i>
                                            @{
                                                string categoryDisplay = item.ProjectCategory switch
                                                {
                                                    "Research" => "Nghiên cứu",
                                                    "Development" => "Phát triển",
                                                    "Thesis" => "Luận văn",
                                                    "Other" => "Khác",
                                                    _ => item.ProjectCategory ?? "Chưa xác định"
                                                };
                                            }
                                            @categoryDisplay
                                        </span><br>
                                        <small class="text-muted field-tag">
                                            <i class="fas fa-graduation-cap me-1"></i>
                                            @{
                                                string fieldDisplay = item.FieldOfStudy switch
                                                {
                                                    "IT" => "Công nghệ thông tin",
                                                    "Engineering" => "Kỹ thuật",
                                                    "Business" => "Kinh doanh", 
                                                    "Science" => "Khoa học",
                                                    "Medicine" => "Y học",
                                                    "Education" => "Giáo dục",
                                                    "Other" => "Khác",
                                                    _ => item.FieldOfStudy ?? "Chưa xác định"
                                                };
                                            }
                                            @fieldDisplay
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        string badgeClass = item.Status switch
                                        {
                                            "Planning" => "bg-secondary",
                                            "InProgress" => "bg-primary", 
                                            "Completed" => "bg-success",
                                            "OnHold" => "bg-warning",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-info"
                                        };
                                        string statusDisplay = item.Status switch
                                        {
                                            "Planning" => "Lập kế hoạch",
                                            "InProgress" => "Đang thực hiện",
                                            "Completed" => "Hoàn thành", 
                                            "OnHold" => "Tạm dừng",
                                            "Cancelled" => "Đã hủy",
                                            _ => item.Status ?? "Không xác định"
                                        };
                                    }
                                    <span class="badge @badgeClass rounded-pill">@statusDisplay</span>
                                </td>
                                <td>
                                    @{
                                        var priorityInfo = item.PriorityLevel switch
                                        {
                                            "High" => new { Class = "text-danger", Icon = "fas fa-angle-double-up", Display = "Cao" },
                                            "Medium" => new { Class = "text-warning", Icon = "fas fa-minus", Display = "Trung bình" },
                                            "Low" => new { Class = "text-success", Icon = "fas fa-angle-double-down", Display = "Thấp" },
                                            _ => new { Class = "text-muted", Icon = "fas fa-question", Display = "Chưa xác định" }
                                        };
                                    }
                                    <span class="priority-indicator @priorityInfo.Class fw-bold">
                                        <i class="@priorityInfo.Icon me-1"></i>@priorityInfo.Display
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <small class="text-muted">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            Bắt đầu: @item.StartDate.ToString("dd/MM/yyyy")
                                        </small>
                                        <small class="text-muted">  
                                            <i class="far fa-calendar-check me-1"></i>
                                            Kết thúc: @(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "Chưa xác định")
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5" data-aos="fade-up">
                <div class="mb-4">
                    <i class="fas fa-folder-open fa-4x text-muted opacity-50"></i>
                </div>
                <h4 class="fw-bold text-muted mb-3">Chưa có dự án nào</h4>
                <p class="text-muted mb-4">Hãy bắt đầu bằng việc tạo dự án nghiên cứu đầu tiên của bạn!</p>
                <a asp-action="Create" class="btn btn-primary px-4">
                    <i class="fas fa-plus me-2"></i> Tạo dự án mới
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Thêm animation cho bảng dự án
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateY(20px)';
                row.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                
                setTimeout(() => {
                    row.style.opacity = '1';
                    row.style.transform = 'translateY(0)';
                }, 100 + (index * 50));
            });
        });
    </script>
}

@section Styles {
    <style>
        .priority-high {
            color: #ef476f;
            font-weight: 600;
        }
        
        .priority-medium {
            color: #f9c74f; 
            font-weight: 600;
        }
        
        .priority-low {
            color: #06d6a0;
            font-weight: 600;
        }
        
        .category-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            font-weight: 500;
        }
        
        .field-tag {
            color: #6c757d;
            font-size: 0.8rem;
        }
        
        .table tbody tr:hover {
            background-color: rgba(67, 97, 238, 0.03);
            transform: scale(1.01);
            transition: all 0.2s ease;
        }
        
        .project-icon {
            background: linear-gradient(135deg, rgba(67, 97, 238, 0.1) 0%, rgba(67, 97, 238, 0.2) 100%);
        }
        
        .priority-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
        }
    </style>
}
