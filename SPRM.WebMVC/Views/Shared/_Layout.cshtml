<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <title>@ViewData["Title"] - SPRM - Hệ thống Quản lý Nghiên cứu Sinh viên</title>
    <link rel="icon" type="image/png" href="~/images/logoUTH.png" />
    <link rel="shortcut icon" type="image/png" href="~/images/logoUTH.png" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">    <link rel="stylesheet" href="~/lib/aos/aos.css" />    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    <link rel="stylesheet" href="~/css/theme-2025.css" asp-append-version="true" />    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main-content-fixes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive-fixes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main-content-centering.css" asp-append-version="true" />    <link rel="stylesheet" href="~/css/fixed-sidebar-layout.css" asp-append-version="true" />    <link rel="stylesheet" href="~/css/layout-zindex-fixes.css" asp-append-version="true" />    <link rel="stylesheet" href="~/css/header-minimalist.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header-responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SPRM.WebMVC.styles.css" asp-append-version="true" />
        @await RenderSectionAsync("Styles", required: false)
</head>
@{
    var hasSidebar = User.Identity.IsAuthenticated;
}
<body class="d-flex flex-column min-vh-100 @(hasSidebar ? "has-sidebar" : "")">    <!-- Header (thiết kế tối giản) -->
    <header class="main-header">
        <nav class="navbar navbar-expand navbar-light bg-white shadow-sm border-bottom">
            <div class="container-fluid px-4">
                <!-- Sidebar toggle button (nếu đang đăng nhập) -->
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="navbar-toggler-custom me-3" id="navbarSidebarToggle" onclick="sidebarUtils.toggle()">
                        <i class="fas fa-bars"></i>
                    </button>
                }
                
                <!-- Breadcrumb hoặc navigation path -->
                <div class="breadcrumb-wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 py-2">
                            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                            @{
                                var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
                                var action = ViewContext.RouteData.Values["Action"]?.ToString();
                                
                                if (!string.IsNullOrEmpty(controller) && controller != "Home")
                                {
                                    <li class="breadcrumb-item">@controller</li>
                                }
                                
                                if (!string.IsNullOrEmpty(action) && action != "Index")
                                {
                                    <li class="breadcrumb-item active">@action</li>
                                }
                            }
                            @if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()) && ViewData["Title"].ToString() != "Home")
                            {
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            }
                        </ol>
                    </nav>
                </div>
                  <!-- Phần bên phải (notifications, user menu) -->
                <div class="ms-auto d-flex align-items-center">
                    <!-- Dark/Light Mode Toggle -->
                    <div class="theme-toggle me-3">
                        <button class="btn btn-sm btn-outline-secondary theme-toggle-btn" id="themeToggle" title="Chuyển đổi giao diện">
                            <i class="fas fa-moon" id="themeIcon"></i>
                        </button>
                    </div>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Notifications -->
                        <div class="dropdown notification-dropdown me-3">
                            <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    3 <span class="visually-hidden">unread messages</span>
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end notifications-dropdown animate-fade-in">
                                <h6 class="dropdown-header">Thông báo</h6>
                                <div class="notifications-list">
                                    <a href="#" class="dropdown-item d-flex notification-item">
                                        <div class="icon-wrapper bg-light-primary me-3">
                                            <i class="fas fa-file-alt text-primary"></i>
                                        </div>
                                        <div class="notification-content">
                                            <p class="mb-0 fw-medium">Có đề tài mới chờ duyệt</p>
                                            <small class="text-muted">30 phút trước</small>
                                        </div>
                                    </a>
                                    <a href="#" class="dropdown-item d-flex notification-item">
                                        <div class="icon-wrapper bg-light-success me-3">
                                            <i class="fas fa-check-circle text-success"></i>
                                        </div>
                                        <div class="notification-content">
                                            <p class="mb-0 fw-medium">Đề tài của bạn đã được chấp nhận</p>
                                            <small class="text-muted">2 giờ trước</small>
                                        </div>
                                    </a>
                                    <a href="#" class="dropdown-item d-flex notification-item">
                                        <div class="icon-wrapper bg-light-warning me-3">
                                            <i class="fas fa-exclamation-triangle text-warning"></i>
                                        </div>
                                        <div class="notification-content">
                                            <p class="mb-0 fw-medium">Sắp đến hạn nộp báo cáo</p>
                                            <small class="text-muted">1 ngày trước</small>
                                        </div>
                                    </a>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a href="#" class="dropdown-item text-center view-all">Xem tất cả thông báo</a>
                            </div>
                        </div>
                        
                        <!-- User Menu -->
                        <div class="dropdown user-dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="avatar-circle me-2">
                                    <i class="fas fa-user"></i>
                                </div>
                                <span class="d-none d-sm-inline">@(Context.Session.GetString("FullName") ?? Context.Session.GetString("UserName"))</span>
                                <span class="badge bg-light text-primary ms-2 fw-medium d-none d-md-inline">@Context.Session.GetString("UserRole")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end animate-fade-in">
                                <li><h6 class="dropdown-header">
                                    <i class="fas fa-user-circle me-1"></i> @(Context.Session.GetString("FullName") ?? Context.Session.GetString("UserName"))
                                </h6></li>
                                <li><small class="dropdown-item-text text-muted">
                                    <i class="fas fa-id-badge me-1"></i> @Context.Session.GetString("UserRole")
                                </small></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user-circle me-2"></i> Hồ sơ cá nhân
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
                                    <i class="fas fa-edit me-2"></i> Chỉnh sửa hồ sơ
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?');">
                                            <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }                    else
                    {
                        <div class="auth-buttons">
                            <a class="btn btn-outline-primary btn-sm rounded-pill px-3 me-2" href="/Account/Login">
                                <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                            </a>
                            <a class="btn btn-success btn-sm rounded-pill px-3" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus me-1"></i> Đăng ký
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Sidebar (chỉ hiển thị khi đăng nhập) -->
    @if (hasSidebar)
    {
        <!-- Overlay for sidebar on mobile -->
        <div class="sidebar-overlay hidden" id="sidebarOverlay"></div>
        @await Html.PartialAsync("_Sidebar")
    }
    
    <!-- Main Content -->
    <main class="flex-grow-1 main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <footer class="py-5 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-graduation-cap fa-2x me-2 text-primary"></i>
                        <h5 class="mb-0 fw-bold">SPRM</h5>
                    </div>
                    <p class="text-muted mb-0">Hệ thống Quản lý Nghiên cứu Sinh viên</p>
                </div>                <div class="col-md-4 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3">Liên hệ</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-envelope me-2 text-primary"></i> CNPM@ut.edu.vn</li>
                        <li class="mb-2"><i class="fas fa-phone me-2 text-primary"></i> 0123456789</li>
                        <li><i class="fas fa-map-marker-alt me-2 text-primary"></i> Đại học GTVT Thành phố Hồ Chí Minh</li>
                    </ul>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="mb-3">
                        <a href="https://www.facebook.com/nguyenhai0913" class="btn btn-sm btn-outline-secondary me-2"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="btn btn-sm btn-outline-secondary me-2"><i class="fab fa-twitter"></i></a>
                        <a href="https://github.com/xuanhai0913" class="btn btn-sm btn-outline-secondary"><i class="fab fa-github"></i></a>
                    </div>
                    <p class="mb-1">&copy; 2025 - SPRM. Tất cả quyền được bảo lưu.</p>
                    <small class="text-muted">Phiên bản 1.0.0</small>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6">
                    <small class="text-muted">Hệ thống quản lý nghiên cứu sinh viên toàn diện</small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small>
                        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Chính sách bảo mật</a>
                    </small>
                </div>
            </div>
        </div>
    </footer>    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="~/js/navigation-handler.js" asp-append-version="true"></script>
    <script src="~/js/non-sidebar-layout.js" asp-append-version="true"></script>    <script src="~/js/sidebar-content-fix.js" asp-append-version="true"></script>    <script src="~/js/layout-manager.js" asp-append-version="true"></script>
    <script src="~/js/header-interactions.js" asp-append-version="true"></script>
    <script src="~/js/theme-system.js" asp-append-version="true"></script>
    <script src="~/js/crud-helper.js" asp-append-version="true"></script><script>
        // Initialize AOS animation library
        document.addEventListener('DOMContentLoaded', function() {
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true
            });
            
            // Add shadow to navbar on scroll
            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 10) {
                    navbar.classList.add('shadow');
                } else {
                    navbar.classList.remove('shadow');
                }
            });
            
            // Ensure sidebar layout is correct after page fully loads
            if (window.sidebarUtils && typeof window.sidebarUtils.refreshLayout === 'function') {
                window.sidebarUtils.refreshLayout();
                // Run again after images might have loaded
                window.addEventListener('load', function() {
                    setTimeout(window.sidebarUtils.refreshLayout, 100);
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
